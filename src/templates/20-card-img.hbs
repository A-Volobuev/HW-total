
<div class="photo-card">
    <a href='{{largeImageURL}}' class='link-large-image'>
        <img 
        src="{{webformatURL}}" 
        alt="{{tags}}" 
        loading="lazy" 
        width='340'
        height='220'
        />
    </a>
    <div class="info">
    <p class="info-item">
        <b>Likes</b>
        {{likes}}
    </p>
    <p class="info-item">
        <b>Views</b>
        {{views}}
    </p>
    <p class="info-item"> 
        <b>Comments</b>
        {{comments}}
    </p>
    <p class="info-item">
        <b>Downloads</b>
        {{downloads}}
    </p>
    </div>

</div>
